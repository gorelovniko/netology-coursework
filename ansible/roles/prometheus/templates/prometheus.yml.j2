# Рабочая конфигурация
global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node'
    static_configs:
      - targets: 
        - 'web-srv-1.ru-central1.internal:9100'
        - 'web-srv-2.ru-central1.internal:9100'

  - job_name: 'nginx'
    static_configs:
      - targets:
        - 'web-srv-1.ru-central1.internal:9113'
        - 'web-srv-2.ru-central1.internal:9113'